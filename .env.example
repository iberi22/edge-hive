# Edge Hive Configuration

# Node Identity
EDGE_HIVE_NODE_NAME=my-node
EDGE_HIVE_KEYPAIR_PATH=.edge-hive/identity.key

# HTTP Server
EDGE_HIVE_HTTP_PORT=3000
EDGE_HIVE_HTTP_HOST=0.0.0.0

# SurrealDB
SURREAL_DB_PATH=.edge-hive/db/
SURREAL_DB_NAMESPACE=edge-hive
SURREAL_DB_DATABASE=main

# Cloudflare Tunnel (Optional)
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here

# AWS (for managed tier only)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Stripe (for billing, optional)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Debug
RUST_LOG=info,edge_hive=debug
RUST_BACKTRACE=1

# OAuth2 Client Credentials for MCP
# Generate with: edge-hive auth client create --name "vscode-client"

# Local HTTPS Server (https://localhost:8443)
EDGE_HIVE_CLIENT_ID=cli_your_client_id_here
EDGE_HIVE_CLIENT_SECRET=your_client_secret_here

# Docker Node 1 (Bootstrap Node - https://172.20.0.10:8443)
EDGE_HIVE_DOCKER_CLIENT_ID=cli_docker_client_id_here
EDGE_HIVE_DOCKER_CLIENT_SECRET=docker_client_secret_here

# Production Server
EDGE_HIVE_PROD_CLIENT_ID=cli_prod_client_id_here
EDGE_HIVE_PROD_CLIENT_SECRET=prod_client_secret_here
