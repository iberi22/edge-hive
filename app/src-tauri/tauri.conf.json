{
   "$schema": "https://tauri.app/v2/schema.json",
   "productName": "Edge Hive",
   "identifier": "io.edge-hive.app",
   "version": "0.1.0",
   "build": {
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "devUrl": "http://localhost:4321",
      "frontendDist": "./dist"
   },
   "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
         "icons/32x32.png",
         "icons/128x128.png",
         "icons/128x128@2x.png",
         "icons/icon.icns",
         "icons/icon.ico"
      ]
   },
   "app": {
      "withGlobalTauri": true,
      "windows": [
         {
            "title": "Edge Hive",
            "width": 400,
            "height": 700,
            "resizable": true,
            "center": true,
            "fullscreen": false,
            "decorations": true,
            "visible": true
         }
      ],
      "security": {
         "csp": null
      }
   },
   "plugins": {}
}