---
import Header from '../components/layout/Header.svelte';
import Sidebar from '../components/layout/Sidebar.svelte';
import Footer from '../components/layout/Footer.svelte';

const currentPath = Astro.url.pathname;
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>Edge Hive Admin</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
</head>
<body class="bg-gray-950 text-white overflow-hidden">
  <div class="flex h-screen">
    <Sidebar client:load currentPath={currentPath} />
    <div class="flex flex-col flex-1 min-w-0 overflow-hidden">
      <Header client:load currentPath={currentPath} />
      <main class="flex-1 overflow-y-auto p-6 bg-gray-950">
        <div class="max-w-7xl mx-auto">
          <slot />
        </div>
      </main>
      <!-- Footer is often not needed in modern dashboards, or can be sticky at bottom of content -->
      <!-- <Footer client:load /> -->
    </div>
  </div>
</body>
</html>
