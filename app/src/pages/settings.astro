---
import AdminLayout from '../layouts/AdminLayout.astro';
import GemBlock from '../components/ui/GemBlock.svelte';
import Card from '../components/ui/Card.svelte';
import Input from '../components/ui/Input.svelte';
import Select from '../components/ui/Select.svelte';
import Button from '../components/ui/Button.svelte';
---
<AdminLayout>
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-textHeading font-sans tracking-tight">Settings</h1>
      <p class="text-muted mt-1 font-sans">Configure your Edge Hive environment.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- General Settings -->
      <Card title="General" hud={true}>
        <div class="space-y-4">
          <Input label="Cluster Name" value="My Edge Cluster" />
          <Select label="Update Channel" options={['Stable', 'Beta', 'Nightly']} />
          <div class="pt-2">
            <Button variant="primary">Save Changes</Button>
          </div>
        </div>
      </Card>

      <!-- Security -->
      <Card title="Security" hud={true} class="border-danger/20">
        <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-danger/50 rounded-tr-sm"></div>

        <div class="space-y-4">
          <div class="flex items-center justify-between p-3 bg-surface/30 rounded-lg border border-glass-border">
            <div>
              <p class="text-textHeading font-medium">Tor Network</p>
              <p class="text-xs text-muted">Enable hidden service access</p>
            </div>
            <div class="relative inline-block w-12 h-6 transition duration-200 ease-in-out rounded-full cursor-pointer bg-success/20">
              <span class="translate-x-6 inline-block w-6 h-6 transform bg-success rounded-full shadow-lg ring-0 transition duration-200 ease-in-out"></span>
            </div>
          </div>

          <GemBlock title="Security Alert">
            Rotating your Tor keys periodically is recommended to maintain forward secrecy.
          </GemBlock>

          <div class="pt-2">
             <Button variant="danger" variant="outline">Rotate Keys</Button>
          </div>
        </div>
      </Card>
    </div>
  </div>
</AdminLayout>
