---
import AdminLayout from '../layouts/AdminLayout.astro';
import GemBlock from '../components/ui/GemBlock.svelte';
import Card from '../components/ui/Card.svelte';
import Badge from '../components/ui/Badge.svelte';
---
<AdminLayout>
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-textHeading font-sans tracking-tight">Tor Network</h1>
      <p class="text-muted mt-1 font-sans">Manage hidden services and anonymity settings.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        <Card title="Hidden Services" hud={true}>
          <div class="space-y-4">
            <div class="p-4 bg-surface/30 rounded-lg border border-glass-border flex items-center justify-between group hover:border-primary/30 transition-colors">
              <div>
                <p class="text-textHeading font-medium font-mono">edge-hive-dashboard</p>
                <p class="text-xs text-muted font-mono mt-1">xyz123...onion:80</p>
              </div>
              <Badge variant="success">ONLINE</Badge>
            </div>
             <div class="p-4 bg-surface/30 rounded-lg border border-glass-border flex items-center justify-between group hover:border-primary/30 transition-colors">
              <div>
                <p class="text-textHeading font-medium font-mono">edge-hive-api</p>
                <p class="text-xs text-muted font-mono mt-1">abc789...onion:3000</p>
              </div>
              <Badge variant="success">ONLINE</Badge>
            </div>
          </div>
        </Card>
      </div>

      <div class="space-y-6">
        <Card title="Network Status">
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-muted text-sm">Bootstrap</span>
              <span class="text-success font-mono text-sm">100%</span>
            </div>
            <div class="w-full bg-surface/50 rounded-full h-2">
              <div class="bg-success h-2 rounded-full" style="width: 100%"></div>
            </div>
            <div class="flex justify-between items-center pt-2">
              <span class="text-muted text-sm">Circuits</span>
              <span class="text-textHeading font-mono text-sm">6 Active</span>
            </div>
          </div>
        </Card>

        <GemBlock title="Anonymity">
          Traffic routed through Tor is encrypted and bounced through 3 relays. Latency is expected.
        </GemBlock>
      </div>
    </div>
  </div>
</AdminLayout>
